        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/roboto_condensed_bold_italic" />
    
    <!-- Extra Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/roboto_condensed_extrabold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="800"
        android:font="@font/roboto_condensed_extrabold_italic" />
    
    <!-- Black -->
    <font
        android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/roboto_condensed_black" />
    <font
        android:fontStyle="italic"
        android:fontWeight="900"
        android:font="@font/roboto_condensed_black_italic" />
