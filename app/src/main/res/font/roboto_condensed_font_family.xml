        android:fontStyle="italic"
        android:fontWeight="600"
        android:font="@font/roboto_condensed_semibold_italic" />
    
    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/roboto_condensed_bold" />
