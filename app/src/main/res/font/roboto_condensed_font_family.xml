        android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/roboto_condensed_medium_italic" />
    
    <!-- Semi Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/roboto_condensed_semibold" />
